            shift 1
            ;;
        --keep_celltype_categories)
            if [ -z "$VIASH_PAR_KEEP_CELLTYPE_CATEGORIES" ]; then
              VIASH_PAR_KEEP_CELLTYPE_CATEGORIES="$2"
            else
              VIASH_PAR_KEEP_CELLTYPE_CATEGORIES="$VIASH_PAR_KEEP_CELLTYPE_CATEGORIES:""$2"
            fi
