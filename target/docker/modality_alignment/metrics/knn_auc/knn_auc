            VIASH_PAR_PROPORTION_NEIGHBORS=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --n_svd)
            VIASH_PAR_N_SVD="$2"
            [ $# -lt 2 ] && ViashError Not enough arguments passed to --n_svd. Use "--help" to get more information on the parameters. && exit 1
            shift 2
            ;;
        --n_svd=*)
            VIASH_PAR_N_SVD=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        ---setup)
            VIASH_MODE='docker_setup'
            VIASH_DOCKER_SETUP_STRATEGY="$2"
            shift 1
            ;;
        ---setup=*)
            VIASH_MODE='docker_setup'
            VIASH_DOCKER_SETUP_STRATEGY="$(ViashRemoveFlags "$1")"
            shift 2
            ;;
        ---dockerfile)
            ViashDockerfile
            exit 0
            ;;
