            shift 2
            ;;
        --verbosity=*)
            VIASH_VERBOSITY="$(ViashRemoveFlags "$1")"
            shift 1
            ;;
        --version)
            echo "scprep_csv main_build"
            exit
            ;;
        --id)
            VIASH_PAR_ID="$2"
            shift 2
            ;;
