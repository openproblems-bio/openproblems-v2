            VIASH_PAR_ID=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --input1)
            VIASH_PAR_INPUT1="$2"
            shift 2
            ;;
        --input1=*)
            VIASH_PAR_INPUT1=$(ViashRemoveFlags "$1")
            shift 1
